<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" > 
         <ImageView
            android:id="@+id/rosterhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/m10"
            android:src="@drawable/default_iconmsg" 
            android:gravity="left"/>
        <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" 
	        android:layout_weight="12" >  	
	    	<TextView 
		        android:id="@+id/message_roster_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/font_black_66"
		        android:paddingTop="@dimen/m8"
				android:layout_marginTop="@dimen/m10"
		        android:gravity="left"
				android:textSize="@dimen/f8"/>
	  	  	<TextView 
		        android:id="@+id/message_roster_last"
		        android:layout_width="@dimen/m200"
		        android:layout_height="wrap_content"
		        android:textColor="@color/font_black_b3"
		        android:singleLine="true"
		        android:gravity="left"
				android:textSize="@dimen/f6"/>
  		</LinearLayout>
       <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
  	  	<TextView 
	        android:id="@+id/message_roster_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingTop="@dimen/m8"
			android:layout_marginRight="@dimen/m8"
			android:layout_marginTop="@dimen/m8"
	        android:textColor="@color/font_black_b3"
	        android:gravity="left" />	        
         <ImageView
            android:id="@+id/expBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/m10"
            android:src="@drawable/unread" 
            android:gravity="right"/>
		</LinearLayout>         
	</LinearLayout>
    
    <ImageView   
	    android:layout_width="fill_parent"  
	    android:layout_height="@dimen/m1"
		android:layout_marginLeft="@dimen/m10"
	    android:background="@color/bg_ee" />
</LinearLayout>
