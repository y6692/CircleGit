<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="@color/white">

	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


        <ImageView
            android:id="@+id/contacthead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/m10"
            android:src="@mipmap/head"
            android:gravity="left"/>   
    	<TextView 
	        android:id="@+id/message_contact_name"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textColor="@color/font_black_66"
	        android:textSize="@dimen/f8"
	        android:paddingBottom="@dimen/m8"
        	android:paddingLeft="@dimen/m15"
        	android:paddingRight="@dimen/m10"
        	android:paddingTop="@dimen/m8"
	        android:gravity="left" />
 	      <ImageView
			  android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/m10"
            android:src="@drawable/noticemsg"
            android:gravity="right"/>
	</LinearLayout>

	<View style="@style/divider_1px"
		android:layout_marginLeft="@dimen/m60"/>
    
</LinearLayout>
