<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:padding="@dimen/m12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/m44"
            android:layout_height="@dimen/m44"
            android:scaleType="centerCrop"
            android:src="@mipmap/head" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/m12"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/m44"
            android:orientation="vertical">
            <TextView
                android:text="ddd"
                android:gravity="top"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black_333"
                android:textSize="@dimen/f18" />
            <TextView
                android:layout_weight="1"
                android:text="ddd"
                android:gravity="bottom"
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black_aaa"
                android:textSize="@dimen/f14" />

        </LinearLayout>

        <com.flyco.roundview.RoundTextView
            android:id="@+id/add"
            android:layout_width="@dimen/m65"
            android:layout_height="@dimen/m27"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="加入"
            android:textSize="@dimen/f14"
            android:textColor="@color/theme_color"
            app:rv_backgroundColor="@color/white"
            app:rv_backgroundPressColor="@color/divider_c1"
            app:rv_strokeColor="@color/theme_color"
            app:rv_strokeWidth="1px"
            app:rv_cornerRadius="@dimen/m35"/>


    </LinearLayout>

    <View style="@style/divider_1px"/>

</LinearLayout>